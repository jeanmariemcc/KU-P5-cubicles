<div class="container">
	<main>
		<h1>{{name}}</h1>
		<img class="cube" src="{{imgURL}}" />
		<div class="details">
			<p><span>Description:</span>
				{{description}}</p>
			<p><span>Difficulty level:</span>{{difficulty}}</p>
			<h2>
				<a class="btn" href="/">Back</a>
				{{#if loggedIn}}
					<a class="btn" href="/edit/cube/:id">Edit</a>
					<a class="btn" href="/delete/cube/:id">Delete</a>
				{{/if}}

			</h2>
		</div>
		<h2>Accessories</h2>
		<div class="accessories">
			{{#each accessories}}
				<div class="accessory">
					<img src="{{imgURL}}" alt="stickerName" />
					<h3>{{name}}</h3>
					<p>{{description}}</p>
				</div>
			{{else}}
				<h3 class="italic">This cube has no accessories yet...</h3>
			{{/each}}
		</div>
		<h2><a class="btn" href="/attach/{{id}}">Attach an Accessory</a></h2>

	</main>
</div>
<footer>@Cubicle: Exercise for Express.js and Handlebars</footer>